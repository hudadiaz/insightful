<!DOCTYPE html>
<html>
<head>
  <title>Insightful</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => false %>
  <%= stylesheet_link_tag    'welcome/landing-page', media: 'all', 'data-turbolinks-track' => false %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => false %>
  <%= yield(:head) %>
  <%= csrf_meta_tags %>
</head>
<body>

    <!-- Navigation -->
    <nav class="navbar navbar-default navbar-fixed-top topnav" role="navigation">
        <div class="container topnav">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <%= link_to 'Insightful', root_path, class: "navbar-brand topnav" %>
            </div>
            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav navbar-right">
                    <li>
                        <%= link_to "Sign up", new_user_registration_path %>
                    </li>
                </ul>
            </div>
            <!-- /.navbar-collapse -->
        </div>
        <!-- /.container -->
    </nav>


    <!-- Header -->
    <a name="about"></a>
    <div class="intro-header">
        <div class="container">

            <div class="row">
                <div class="col-lg-12">
                    <div class="intro-message">
                        <h1>Insightful</h1>
                        <h3>Because data is more than tables</h3>
                        <hr class="intro-divider">
                        <%= link_to "Sign up", new_user_registration_path, class: 'btn btn-raised btn-success waves-effect' %>
                        <%= link_to 'Login', new_user_session_path, class: 'btn btn-raised waves-effect' %>
                    </div>
                </div>
            </div>

        </div>
        <!-- /.container -->

    </div>
    <!-- /.intro-header -->

    <!-- Page Content -->

  <a name="services"></a>
    <div class="content-section-a">

        <div class="container">
            <div class="row">
                <div class="col-lg-5 col-sm-6">
                    <hr class="section-heading-spacer">
                    <div class="clearfix"></div>
                    <h2 class="section-heading">More than tables</h2>
                    <p class="lead">Convert your lengthy data tables into beatifully crafted visualizations.</p>
                </div>
                <div class="col-lg-5 col-lg-offset-2 col-sm-6">
                    <%= image_tag('more-than-tables.png', class: 'img-responsive') %>
                </div>
            </div>

        </div>
        <!-- /.container -->

    </div>
    <!-- /.content-section-a -->

    <div class="content-section-b">

        <div class="container">

            <div class="row">
                <div class="col-lg-5 col-lg-offset-1 col-sm-push-6  col-sm-6">
                    <hr class="section-heading-spacer">
                    <div class="clearfix"></div>
                    <h2 class="section-heading">Showcase your visualizations</h2>
                    <p class="lead">Save your data visualization and share them across the internet! Unlike saving and posting images, your visualizations can be updated at any time.</p>
                </div>
                <div class="col-lg-5 col-sm-pull-6  col-sm-6">
                    <%= image_tag('showcase-stacked-bar.png', class: 'img-responsive') %>
                </div>
            </div>

        </div>
        <!-- /.container -->

    </div>
    <!-- /.content-section-b -->

    <div class="content-section-a">

        <div class="container">

            <div class="row">
                <div class="col-lg-5 col-sm-6">
                    <hr class="section-heading-spacer">
                    <div class="clearfix"></div>
                    <h2 class="section-heading">Highly responsive</h2>
                    <p class="lead">Your visualization follows the size of the container. There is no need for you to adjust all the little details.</p>
                </div>
                <div class="col-lg-5 col-lg-offset-2 col-sm-6">
                    <%= image_tag('responsive.png', class: 'img-responsive') %>
                </div>
            </div>

        </div>
        <!-- /.container -->

    </div>
    <!-- /.content-section-a -->

    <% if @visualization.present? %>
    <div class="content-section-b">

        <div class="container">

            <div class="row">
                <div class="col-lg-12">
                    <h2>Last month's most viewed visualizations:</h2>
                    <iframe src="<%= standalone_visualization_url @visualization %>?notrack" height="600px" width="100%" frameborder="0"></iframe>

                    <hr class="intro-divider">

                    <p class="text-center"><%= link_to "Checkout other visualizations", visualizations_path, class: 'text-muted' %></p>
                </div>
            </div>

        </div>
        <!-- /.container -->

    </div>
    <!-- /.banner -->
    <% end %>
    <!-- Footer -->
    <footer>
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <ul class="list-inline">
                        <li>
                            <%= link_to 'Home', root_path %>
                        </li>
                        <li class="footer-menu-divider">⋅</li>
                        <li class="footer-menu-divider">⋅</li>
                        <li>
                            <%= link_to 'FAQ', faq_path %>
                        </li>
                    </ul>
                    <p class="copyright text-muted small">Insightful 2016</p>
                </div>
            </div>
        </div>
    </footer>
</body>
</html>
