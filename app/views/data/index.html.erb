<div class="bs-docs-section">
  <div class="row">
    <div class="col-md-12">
      <div class="page-header">
        <h1>Listing data</h1>
      </div>
    </div>
    <div class="col-sm-12">
      
      <% if @data.present? %>
        <div class="table-wrapper">
          <table class="table table-striped">
            <thead>
              <tr>
                <th>Name</th>
                <th>Last modified</th>
                <th></th>
              </tr>
            </thead>
          
            <tbody>
              <% @data.each do |datum| %>
                <tr>
                  <td><%= datum.name %></td>
                  <td><%= I18n.l datum.updated_at.localtime, format: :long %></td>
                  <td>
                    <%= link_to 'Show', datum_path(datum), class: 'btn btn-xs btn-primary' %>&nbsp;
                    <%= link_to 'Edit', edit_datum_path(datum), class: 'btn btn-xs' %>&nbsp;
                    <%= link_to 'Delete', datum, method: :delete, data: { confirm: 'Deleting this data will delete all its visualizations. Are you sure?' }, class: 'btn btn-xs btn-danger' %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>

          <%= paginate @data %><br>
        </div>
      <% else %>
        <p><em>You have not added any data</em></p>
      <% end %>

      <%= link_to 'New Data', new_datum_path, class: 'btn btn-primary waves-effect btn-raised' %>
    </div>
  </div>
</div>
