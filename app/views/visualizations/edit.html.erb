<div class="bs-docs-section ">
  <div class="row">
    <div class="col-sm-12">
      <h1>Editing Visualization</h1>
      
      <%= form_for(@visualization) do |f| %>
        <% if @visualization.errors.any? %>
          <div class="panel panel-danger">
            <div class="panel-heading">
              <h3 class="panel-title"><%= pluralize(@visualization.errors.count, "error") %> prohibited this visualization from being saved:</h3>
            </div>
            <div class="panel-body">
              <ul>
              <% @visualization.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
              </ul>
            </div>
          </div>
        <% end %>

        <div class="form-group label-floating">
          <%= f.label :title, class: "control-label" %>
          <%= f.text_field :title, class: "form-control" %>
          <p class="help-block">Give this <%= @visualization.type.humanize.downcase %> a title.</p>
        </div>

        <div class="form-group label-floating">
          <%= f.label :caption, class: "control-label" %>
          <%= f.text_field :caption, class: "form-control" %>
          <p class="help-block">Write a short description so people know what this <%= @visualization.type.humanize.downcase %> means.</p>
        </div>

        <div class="form-group">
          <iframe src="<%= standalone_visualization_path @visualization %>" frameborder="0" height="600px" width="100%" style="border:1px dashed #bbb"></iframe>
        </div>

        <div class="form-group">
          <%= f.button class: "btn btn-primary btn-raised waves-effect" %>
          <%= link_to 'Show', @visualization, class: "btn btn-sm"  %>
          <%= link_to 'Cancel', @visualization.datum, class: "btn btn-sm" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
