<%= form_for(@survey, html: {class: 'form-horizontal'}) do |f| %>
  <% if @survey.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@survey.errors.count, "error") %> prohibited this survey from being saved:</h2>

      <ul>
      <% @survey.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <div class="col-lg-12">
      <%= f.text_field :title, class: 'form-control', placeholder: :Title %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-lg-12">
      <%= f.text_field :description, class: 'form-control', placeholder: :Description %>
    </div>
  </div>

  <%= f.fields_for :questions do |builder| %>
    <%= render "question_fields", :f => builder %>
  <% end %>

  <div class="form-group">
    <div class="col-lg-12">
      <div class="checkbox">
        <label>
          <%= f.check_box :public %> Public
        </label>
      </div>

      <div class="checkbox">
        <label>
          <%= f.check_box :require_login %> Require login
        </label>
      </div>

      <div class="checkbox">
        <label>
          <%= f.check_box :answer_is_editable %> Answer is editable
        </label>
      </div>
    </div>
  </div>

  <div class="form-group">
    <div class="col-lg-12">
      <%= f.button class: "btn btn-primary waves-effect" %>
    </div>
  </div>
<% end %>
