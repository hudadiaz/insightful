<div class="form-group">
  <div class="col-lg-8">
    <%= f.text_field :question, class: 'form-control', placeholder: :Question %>
  </div>

  <div class="col-lg-4">
    <%= f.select :type, Question.types.to_a.map { |w| [w.first.humanize, w.first] }, {}, class: 'form-control', "data-dropdownjs": true %>
  </div>
</div>

<%= f.fields_for :options do |builder| %>
  <%= render 'option_fields', :f => builder %>
<% end %>

<div class="form-group">
  <div class="col-lg-12">
    <input placeholder="Add option" disabled id="add_option" type="text" class="form-control">
  </div>
</div>